{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "outDir": "lib",
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": ["../node_modules/@0x/typescript-typings/types", "../node_modules/@types", "./types"],
        "noUnusedParameters": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false
    },
    "include": ["src", "test"],
    "exclude": ["types"]
}
